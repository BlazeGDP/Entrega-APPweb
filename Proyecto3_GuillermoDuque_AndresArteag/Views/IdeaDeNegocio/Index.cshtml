@model IEnumerable<Proyecto3_GuillermoDuque_AndresArteag.Models.IdeaDeNegocio>

<h2>Lista de Ideas de Negocio</h2>

<p>
    @Html.ActionLink("Crear Nueva", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
           

            <td>
                <a href="@Url.Action("Edit", "IdeaDeNegocio", new { codigo = item.Codigo })">Editar</a>
            </td>
        </tr>
    }
</table>
